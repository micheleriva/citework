{
  "name": "citework",
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test --allow-net src/formatter.test.ts",
    "test:e2e": "deno test --allow-net src/sources.e2e.test.ts",
    "test:all": "deno test --allow-net",
    "build:npm": "deno run -A scripts/build_npm.ts"
  },
  "imports": {
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "@deno/dnt": "jsr:@deno/dnt@0.41.3"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "useTabs": false,
      "singleQuote": true
    }
  }
}
